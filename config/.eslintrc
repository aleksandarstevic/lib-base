{
  "extends": "airbnb",
  "root": true,
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-debugger": 1,
    "no-underscore-dangle": 0,
    "object-curly-spacing": 0,
    "object-curly-newline": 0,
    "class-methods-use-this": 0,
    "no-plusplus": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ]
      }
    }
  }
}
